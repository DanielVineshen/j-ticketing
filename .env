// FILE: .env.example (for configuration)
# Server configuration
SERVER_PORT=8080

# Database configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=ticketing

# Migration configuration
AUTO_MIGRATE=false
CREATE_CONSTRAINTS=false
MIGRATION_PATH=migrations

# JWT configuration
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ACCESS_TOKEN_TTL=15      # 15 minutes
JWT_REFRESH_TOKEN_TTL=168    # 7 days (24*7=168)